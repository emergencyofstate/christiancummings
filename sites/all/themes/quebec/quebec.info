name = Quebec
description = A sub-theme of Montreal. 
core = 7.x
engine = phptemplate

base theme = montreal

; This is where you can add all of your custom CSS.
stylesheets[all][] = /css/custom.css

; Define block regions.
regions[content]        = Content
regions[sidebar_first]  = First Sidebar
regions[sidebar_second] = Second Sidebar

regions[front_blog]    = Front Page Blog

regions[recent_projects] = Recent Projects

regions[footer_1]       = Footer Box 1
regions[footer_2]       = Footer Box 2
regions[footer_3]       = Footer Box 3
regions[footer_4]       = Footer Box 4
regions[footer_full]    = Footer Full Width

; Define theme setting defaults.
settings[branding_type] = 'text'

settings[enable_highlight] = '1'
settings[highlight_text] = "There's no such thing as simple. Simple is hard"

settings[enable_slider] = '0'
settings[slides_number] = '3'
settings[slider_caption] = ''

settings[enable_services] = '1'

settings[enable_information] = '1'

settings[enable_recent_posts] = '0'
settings[recent_posts_title] = 'Recent Notes'

settings[enable_recent_projects] = '0'
settings[recent_projects_title] = 'Recent Projects'

settings['font_family'] = '"Oswald", sans-serif'

settings[h1] = '36px'
settings[h2] = '30px'
settings[h3] = '24px'
settings[h4] = '18px'
settings[h5] = '14px'
settings[h6] = '12px'